<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:paddingTop="@dimen/drawer_margin_top"
    tools:context="com.dustinmreed.openwifi.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/navDrawerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/primaryColor"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/navHeaderImg"
            android:layout_width="@dimen/nav_drawer_width"
            android:layout_height="140dp"
            android:contentDescription="@string/launcher_icon"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/navAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="Roboto Medium"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navDrawerHeader"
        android:layout_marginTop="8dp"
        android:background="#EEE">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
