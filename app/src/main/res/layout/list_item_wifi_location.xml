<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/listview_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/listview_padding"
        android:paddingLeft="@dimen/listview_padding"
        android:paddingRight="@dimen/listview_padding"
        android:paddingStart="@dimen/listview_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/listview_padding"
        android:paddingTop="@dimen/listview_padding">
    <TextView
        android:id="@+id/list_item_wifi_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="#ff47515b"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_wifi_type_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ff4e5d44"
        android:textSize="@dimen/abc_text_size_body_2_material"
        android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>